<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".TicTacToeActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TIC TAC TOE GAME"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgbutton1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:onClick="imageButtonTap"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder" />

        <ImageView
            android:id="@+id/imgbutton2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:onClick="imageButtonTap"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder" />

        <ImageView
            android:id="@+id/imgbutton3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:onClick="imageButtonTap"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgbutton4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:onClick="imageButtonTap"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder" />

        <ImageView
            android:id="@+id/imgbutton5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:onClick="imageButtonTap"
            android:scaleType="fitCenter"
            android:src="@drawable/place_holder" />

        <ImageView
            android:id="@+id/imgbutton6"
